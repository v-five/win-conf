{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "final_space": true,
  "palette": {
    "text": "default",
    "background": "darkGray",
    "primary": "yellow",
    "success": "green",
    "warning": "magenta",
    "error": "red",
    "info": "blue"
  },
  "enable_cursor_positioning": true,
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "async": true,
  "upgrade": {
    "auto": true,
    "notice": true,
    "source": "cdn",
    "interval": "24h"
  },
  "blocks": [
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:primary",
          "background": "p:background",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "options": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "manjaro": "\uf312",
            "mint": "\uf30e",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31b",
            "linux": "\uf17c",
            "macos": "\uf179",
            "windows": "\uf17a"
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:primary",
          "background": "p:background",
          "template": " \uf0e7",
          "options": {
            "root_icon": "\ue7a5"
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:primary",
          "background": "p:background",
          "template": " {{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}{{ .UserName }}{{ end }} "
        },
        {
          "type": "path",
          "style": "plain",
          "template": " {{ .Path }} ",
          "options": {
            "home_icon": "\uf46d ",
            "folder_icon": "<p:background>\uf115 </>",
            "folder_separator_icon": "<p:primary>\uf460 </>",
            "style": "agnoster_short"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:primary",
          "template": "<b>\u276f</b>"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "template": " {{ if gt .Code 0 }}\uf00d{{ else }}\uf00c{{ end }} ",
          "options": {
            "always_enabled": true
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "template": "{{ .FormattedMs }} ",
          "options": {
            "always_enabled": true
          }
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#98C379",
          "background": "p:background",
          "template": " {{.PackageManagerIcon}} \ued0d {{.Major}}",
          "options": {
            "fetch_package_manager": true,
            "bun_icon": "<#FFE599>\ue76f</>",
            "npm_icon": "<#CB3837>\ued0e</>",
            "yarn_icon": "<#2C8EBB>\ue6a7</>",
            "pnpm_icon": "<#F9AD00>\ue865</>"
          }
        },
        {
          "type": "dotnet",
          "style": "plain",
          "foreground": "#C678DD",
          "background": "p:background",
          "template": " \ue77f {{ if .Unsupported }}\uf071{{ else }}{{ .Major }}.{{ .Minor }}{{ end }}"
        },
        {
          "type": "java",
          "style": "plain",
          "foreground": "#5382A1",
          "background": "p:background",
          "template": " \ue738 <#CC342D>{{ .Major }}</>"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:primary{{ end }}",
            "{{ if gt .Ahead 0 }}p:success{{ end }}",
            "{{ if gt .Behind 0 }}p:warning{{ end }}"
          ],
          "background": "p:background",
          "template": "<p:text> {{ .UpstreamIcon }} {{ .HEAD }}</>{{ if and (eq .Ahead 0) (eq .Behind 0) }}<p:success> {{ .BranchStatus }}</>{{else}}<p:warning> {{ .BranchStatus }}</>{{ end }}{{ if or (.Working.Changed) (.Staging.Changed) }} \uf044{{ end }}{{ if gt .StashCount 0 }}<p:info> \uf0c7</>{{ end }} ",
          "options": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "git_icon": "\ue702"
          }
        }
      ]
    }
  ]
}
